<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        
        Label:
            text: 'Registrarse'
            font_size: 24
            size_hint_y: None
            height: 50
            
        TextInput:
            id: username_input
            hint_text: 'Nombre de usuario'
            size_hint_y: None
            height: 50
            
        TextInput:
            id: password_input
            hint_text: 'Contraseña'
            password: True
            size_hint_y: None
            height: 50
            
        TextInput:
            id: confirm_password_input
            hint_text: 'Confirmar contraseña'
            password: True
            size_hint_y: None
            height: 50
            
        Label:
            text: root.error_message
            color: (1, 0, 0, 1)
            size_hint_y: None
            height: 30
            
        Label:
            text: root.success_message
            color: (0, 0.7, 0, 1)
            size_hint_y: None
            height: 30
            
        Button:
            text: 'Registrarse'
            size_hint_y: None
            height: 50
            on_press: root.attempt_register()
            
        Button:
            text: 'Volver a Login'
            size_hint_y: None
            height: 50
            on_press: 
                root.reset_form()
                root.manager.current = 'login'