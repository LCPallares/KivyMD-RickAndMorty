<CharactersCard>:
    source: ""
    text: ""
    favorite: {}
    size_hint_y: None
    height: 200
    padding: 10
    spacing: 10
    orientation: "horizontal"
    
    FitImage:
        source: root.source
        size_hint_x: 0.3
        allow_stretch: True
        keep_ratio: True

    MDLabel:
        text: root.text
        halign: "center"
        
    MDButton:
        style: "tonal"
        pos_hint: {"center_x": .5, "center_y": .5}
        theme_width: "Custom"
        height: "56dp"
        size_hint_x: .5
        on_press: root.remove_favorite(root.favorite)
        MDButtonText:
            text: "delete"
            pos_hint: {"center_x": .5, "center_y": .5}


<FavoritesListScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        #padding: 10
        #spacing: 10

        # BARRA SUPERIOR
        MDTopAppBar:
            id: top_app_bar
            type: "small"
            elevation: 2

            # BOTONES IZQ
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"
                    on_release:
                        app.root.ids.nav_drawer.set_state("toggle")
                        #root_kv.ids.nav_drawer.set_state("toggle")

            # TITULO
            MDTopAppBarTitle:
                text: "Favoritos"

            # BOTONES DER
            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "magnify"
                    on_release: app.search_action()

                MDActionTopAppBarButton:
                    icon: "filter-variant"
                    on_release: app.filter_action()

                MDActionTopAppBarButton:
                    icon: "dots-vertical"
                    on_release: app.menu_open(self)

        ScrollView:
            GridLayout:
                id: favorites_grid
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10
                # Esto se llenará dinámicamente con los favoritos