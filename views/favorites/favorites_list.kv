<FavoritesListScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        # Barra de navegaci칩n - AHORA EN PRIMER PLANO
        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            padding: 5
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Personajes'
                background_normal: ''
                background_color: 0.3, 0.3, 0.5, 1
                on_press: root.manager.current = 'characters_list'

            Button:
                text: 'Favoritos'
                background_normal: ''
                background_color: 0.3, 0.5, 0.3, 1
                on_press: root.manager.current = 'favorites_list'

            Button:
                text: 'Cerrar Sesi칩n'
                background_normal: ''
                background_color: 0.8, 0.3, 0.3, 1
                on_press: 
                    app.auth_controller.logout()
                    #root.manager.current = 'login'

        Label:
            text: 'Mis Favoritos'
            font_size: 24
            size_hint_y: None
            height: 50

        ScrollView:
            GridLayout:
                id: favorites_grid
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10

                # Esto se llenar치 din치micamente con los favoritos