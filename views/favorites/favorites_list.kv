<FavoritesListScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        # BARRA SUPERIOR
        MDTopAppBar:
            id: top_app_bar
            type: "small"
            elevation: 2

            # BOTONES IZQ
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"
                    on_release:
                        app.root.ids.nav_drawer.set_state("toggle")
                        #root_kv.ids.nav_drawer.set_state("toggle")

            # TITULO
            MDTopAppBarTitle:
                text: "Favoritos"

            # BOTONES DER
            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "magnify"
                    on_release: app.search_action()

                MDActionTopAppBarButton:
                    icon: "filter-variant"
                    on_release: app.filter_action()

                MDActionTopAppBarButton:
                    icon: "dots-vertical"
                    on_release: app.menu_open(self)

        ScrollView:
            GridLayout:
                id: favorites_grid
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10

                # Esto se llenará dinámicamente con los favoritos