<CharactersListScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        #spacing: 5
        #spacing: dp(5)

        # BARRA SUPERIOR
        MDTopAppBar:
            id: top_app_bar
            type: "small"
            elevation: 2

            # BOTONES IZQ
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"
                    on_release:
                        app.root.ids.nav_drawer.set_state("toggle")
                        #root_kv.ids.nav_drawer.set_state("toggle")

            # TITULO
            MDTopAppBarTitle:
                text: "Personajes"

            # BOTONES DER
            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "magnify"
                    on_release: app.search_action()

                MDActionTopAppBarButton:
                    icon: "filter-variant"
                    on_release: app.filter_action()

                MDActionTopAppBarButton:
                    icon: "dots-vertical"
                    on_release: app.menu_open(self)

        # √Årea de contenido con prioridad de espacio
        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True
            #size_hint_y: 1
            size_hint_x: 1
            #size_hint: (1, 1)

            MDGridLayout:
                id: characters_grid
                cols: 2  # 2 columnas, puedes ajustar
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: dp(10)
                #row_default_height: dp(220)  # Altura de cada tile
                adaptive_height: True


